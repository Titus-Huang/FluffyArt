<main class="main-paddings">
    <header>
        <h1>Edit Profile</h1>
    </header>

    <hr>

    <section>
        <h2>Upload user profile</h2>
        <form action="/users/edit/<%= session['user_id'] %>" method="POST" enctype="multipart/form-data">

            <div id="profile_picture">
                <label for="profile_picture">Upload profile picture: </label>
                <br>
                <input type="file" accept="image/*" name="profile_picture">
            </div>

            <button>Update Profile Picture</button>
        </form>
    </section>
</main>